
# Pre-Requsite Variables
    $ApprovedOperatingSystems    =    ('Microsoft Windows 10 Home', 'Microsoft Windows 10 Pro', 'Microsoft Windows 11 Home', 'Microsoft Windows 11 Pro')
    $MinimumPowerShellVersion    =    "5.1"

# Check if Admin
If (!([bool](([System.Security.Principal.WindowsIdentity]::GetCurrent()).groups -match "S-1-5-32-544"))) {   
    _ErrorMsg "This script must be run with administrative rights. Log in as an administrator and run again."
}

# Check Powershell version
if ($PSVersionTable.PSVersion.Major -lt ($MinimumPowerShellVersion.Split(".")[0]) {
    _ErrorMsg "Minimum Powershell version is $($MinimumPowerShellVersion). Update Powershell and run again."
    _ErrorMsg $PSVersionTable
}

# Check Operating System
    $Info = Get-ComputerInfo
    $ApprovedOperatingSystems | foreach {If ($_ -match $Info.OSName) {$OSPass++}}
    If (!($OsPass)) {
        _ErrorMsg "OS: $($Info.OSName) is not an approved Operating System."
    }
